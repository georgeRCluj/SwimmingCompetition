<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/buttons_background_color
        </item> <!-- here are included the colors of buttons' backgrounds -->
        <item name="android:textColorPrimary">@color/header_text_color
        </item> <!-- here are included the colors of buttons -->
        <item name="android:textColorTertiary">@color/buttons_background_color</item>
        <item name="android:fontFamily">sans-serif-condensed
        </item> <!-- here is set the font for the whole app -->
    </style>

    <!-- Text Header style -->
    <style name="TextHeader">
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:background">@color/header_background_color</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <!-- Team Style -->
    <style name="Team_Style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_medium</item>
    </style>

    <!-- Pace & Stroke style -->
    <style name="Pace_Stroke_Style">
        <item name="android:textSize">@dimen/pace_stroke_text_size</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_large</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Swimmer style -->
    <style name="Swimmer_Style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- Score style -->
    <style name="Score_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>

    <!-- Separator style (View) -->
    <style name="Separator_style">
        <item name="android:background">@color/separator_background_color</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_medium</item>
    </style>

    <!-- Button Style-->
    <style name="Button_Style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#A97233</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Data Style-->
    <style name="Data_Style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Reset button style-->
    <style name="reset_button_style">
        <item name="android:layout_marginBottom">@dimen/vertical_margin_reset_button</item>
    </style>

</resources>